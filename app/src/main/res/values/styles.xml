<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- region CaptTiPalism Styles -->
    <style name="CapiTiPalismEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/capitipalism_primary</item>
    </style>

    <!-- endregion -->

    <!-- Support Chat Theme -->
    <style name="ChatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/capitipalism_primary</item>
        <item name="colorPrimaryDark">@color/capitipalism_primary</item>
        <item name="colorAccent">@color/capitipalism_accent</item>
        <item name="actionBarSize">60dp</item>
    </style>
    <!-- endregion -->

</resources>
