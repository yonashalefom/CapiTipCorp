<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Settings">

        <EditTextPreference
            app:icon="@drawable/ic_setting_group_name"
            app:key="group_name"
            app:title="Group Name"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:icon="@drawable/ic_setting_group_theme"
            app:entries="@array/app_theme_names"
            app:entryValues="@array/app_theme_values"
            app:key="group_theme"
            app:title="Group Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Login Link Settings">

        <EditTextPreference
            app:icon="@drawable/ic_setting_group_link"
            app:key="ad_link_1"
            app:title="Login Link 1"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:icon="@drawable/ic_setting_group_link"
            app:key="ad_link_2"
            app:title="Login Link 2"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:icon="@drawable/ic_setting_group_link"
            app:key="ad_link_3"
            app:title="Login Link 3"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="App Features">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_setting_color_confirmation_feature"
            android:defaultValue="false"
            app:defaultValue="true"
            app:key="color_confirmation_feature"
            app:title="Color Confirmation Feature" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_setting_group_1s2s_feature"
            android:defaultValue="false"
            app:defaultValue="true"
            app:key="ones_twos_feature"
            app:title="1s and 2s Feature" />

        <!--        <SwitchPreferenceCompat-->
        <!--            app:dependency="sync"-->
        <!--            app:key="attachment"-->
        <!--            app:summaryOff="@string/attachment_summary_off"-->
        <!--            app:summaryOn="@string/attachment_summary_on"-->
        <!--            app:title="@string/attachment_title" />-->

    </PreferenceCategory>

</PreferenceScreen>