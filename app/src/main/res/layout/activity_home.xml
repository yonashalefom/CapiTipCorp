<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/capitipalism_white">

    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/activity_home_material_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:viewpager_animatedHeaderImage="true"
        app:viewpager_color="@color/colorPrimary"
        app:viewpager_disableToolbar="false"
        app:viewpager_displayToolbarWhenSwipe="false"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_headerAdditionalHeight="20dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_headerHeight="200dp"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="true"
        app:viewpager_logo="@layout/activity_home_layout_logo"
        app:viewpager_logoMarginTop="100dp"
        app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_standard"
        app:viewpager_parallaxHeaderFactor="1.5"
        app:viewpager_transparentToolbar="true" />
</androidx.constraintlayout.widget.ConstraintLayout>