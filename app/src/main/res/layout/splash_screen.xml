<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/capitipalism_white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/login_scan_nfc_logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:tint="@color/capitipalism_primary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:lottie_autoPlay="true"
        app:lottie_fileName="splash_screen_loading_2.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/splash_loading_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textColor="@color/capitipalism_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_scan_nfc_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>